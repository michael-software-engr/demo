{
  "name": "react-template",
  "proxy": "http://localhost:3000",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "classnames": "^2.2.6",
    "cross-fetch": "^3.0.0",
    "humps": "^2.0.1",
    "lodash": "^4.17.11",
    "moment": "^2.18.1",
    "normalizr": "^3.3.0",
    "numeral": "^2.0.6",
    "prop-types": "^15.6.2",
    "query-string": "^6.2.0",
    "react": "^16.6.3",
    "react-burger-menu": "^2.5.4",
    "react-dates": "^18.3.1",
    "react-dom": "^16.6.3",
    "react-helmet": "^5.2.0",
    "react-redux": "^6.0.0",
    "react-router-dom": "^4.3.1",
    "react-router-hash-link": "^1.2.1",
    "react-scripts": "2.1.2",
    "react-with-direction": "^1.3.0",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.84.0"
  },
  "scripts": {
    "rails-check": "test -n \"$__RAILS_ROOT\"",
    "rails-cleanup": "rm -rf $__RAILS_ROOT/app/javascript/stocks $__RAILS_ROOT/public/stocks $__RAILS_ROOT/public/static",
    "rails-cp-src": "mkdir -p $__RAILS_ROOT/app/javascript/stocks && cp -r public src package.json README.md yarn.lock $__RAILS_ROOT/app/javascript/stocks",
    "rails-remove-git": "rm -rf $__RAILS_ROOT/app/javascript/stocks/.git",
    "rails-cp-build": "cp -r build $__RAILS_ROOT/public/stocks",
    "rails-cp-build-static-media": "cp -r build/static $__RAILS_ROOT/public/",
    "rails-rm-static-junk": "rm -rf $__RAILS_ROOT/public/static/{css,js}",
    "rails-cp-favicon": "cp ./public/favicon.ico $__RAILS_ROOT/public",
    "rails-replace-static": "sed -i -e 's/\\/static\\//\\/stocks\\/static\\//g' $__RAILS_ROOT/public/stocks/index.html",
    "rails": "npm run rails-check && npm run build && npm run rails-cleanup && npm run rails-cp-src && npm run rails-remove-git && npm run rails-cp-build && npm run rails-cp-build-static-media && npm run rails-rm-static-junk && npm run rails-cp-favicon && npm run rails-replace-static",
    "deploy": "npm run build && surge --project ./build/ --domain react-sink.surge.sh",
    "surge": "surge",
    "build-css": "node-sass src/ -o src/css/",
    "watch-css": "npm run build-css -- --watch",
    "remove-redundant-css": "nodemon --watch src/css/ --ext '*' --exec 'rm -rf src/css/css'",
    "start-js": "react-scripts start",
    "start": "npm run build-css && npm-run-all -p watch-css remove-redundant-css start-js",
    "build": "npm run build-css && react-scripts build",
    "test": "react-scripts test --env=jsdom --notify",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.0",
    "jest-enzyme": "^7.0.1",
    "nightmare": "^3.0.1",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "redux-devtools": "^3.5.0",
    "redux-devtools-dock-monitor": "^1.1.3",
    "redux-devtools-log-monitor": "^1.4.0",
    "redux-logger": "^3.0.6",
    "surge": "^0.20.1"
  }
}
